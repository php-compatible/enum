{
    "name": "php-compatible/enum",
    "description": "PHP 8 enums compatible for PHP 7",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": ">=7.2",
        "symfony/console": "^3.4 || ^4.0 || ^5.0 || ^6.0 || ^7.0 || ^8.0"
    },
    "config": {
        "platform": {
            "php": "7.2.5"
        }
    },
    "autoload": {
        "psr-4": {
            "PhpCompatible\\Enum\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "tests\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5",
        "friendsofphp/php-cs-fixer": "^2.19"
    },
    "scripts": {
        "test": "phpunit",
        "cs-check": "php-cs-fixer fix --dry-run --diff",
        "cs-fix": "php-cs-fixer fix"
    },
    "bin": [
        "bin/php-compatible-enum-auto-doc",
        "bin/php-compatible-enum-upgrade-to-php8"
    ]
}
